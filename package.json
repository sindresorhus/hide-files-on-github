{
	"private": true,
	"scripts": {
		"test": "npm run build && xo",
		"build": "webpack --mode=production",
		"watch": "webpack --mode=development --watch",
		"release:amo": "cd distribution && web-ext-submit",
		"release:cws": "cd distribution && webstore upload --auto-publish",
		"release": "run-s build update-version release:*",
		"update-version": "dot-json distribution/manifest.json version $TRAVIS_TAG"
	},
	"dependencies": {
		"@types/chrome": "0.0.86",
		"dom-chef": "^3.6.1",
		"element-ready": "^4.1.0",
		"select-dom": "^5.1.0",
		"webext-domain-permission-toggle": "^0.1.0",
		"webext-dynamic-content-scripts": "^5.0.2"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.4.0",
		"@types/react": "^16.8.24",
		"@typescript-eslint/eslint-plugin": "^1.13.0",
		"@typescript-eslint/parser": "^1.13.0",
		"chrome-webstore-upload-cli": "^1.2.0",
		"copy-webpack-plugin": "^5.0.4",
		"dot-json": "^1.1.0",
		"eslint": "^6.1.0",
		"eslint-config-xo-typescript": "^0.15.0",
		"npm-run-all": "^4.1.5",
		"size-plugin": "^1.2.0",
		"terser-webpack-plugin": "^1.4.1",
		"ts-loader": "^6.0.4",
		"typescript": "^3.5.3",
		"web-ext-submit": "^3.1.1",
		"webpack": "^4.38.0",
		"webpack-cli": "^3.3.6",
		"xo": "^0.24.0"
	},
	"xo": {
		"extensions": [
			"ts",
			"tsx"
		],
		"envs": [
			"browser",
			"webextensions"
		],
		"rules": {
			"import/no-unassigned-import": "off"
		},
		"overrides": [
			{
				"files": "**/*.{ts,tsx}",
				"extends": "xo-typescript",
				"rules": {
					"@typescript-eslint/no-unused-vars": [
						"error",
						{
							"varsIgnorePattern": "^React$"
						}
					]
				}
			}
		]
	}
}
